let { printf, exit } = import("c");
let { caller_location } = import("intrinsics");

@track_caller
pub fn panic(
    fmt: *str = "unknown reason",
) -> never = {
    // TODO: use our own println function.
    let { file, line, column } = caller_location();

    printf(
        "panic: \"%s\" at %s:%u:%u\n".data, 
        fmt.data,
        file.data,
        line,
        column
    );

    exit(1)
};